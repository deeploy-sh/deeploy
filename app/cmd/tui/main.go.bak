package main

import (
	"fmt"
	"os"

	"github.com/axadrn/deeploy/internal/tui"
)

func main() {
	if len(os.Args) < 2 {
		fmt.Println("Usage: cli <command> [flags]")
		os.Exit(1)
	}

	// Use first arg as command
	command := os.Args[1]

	// Shift args for 1 to make flag.Parse() execute correct
	os.Args = os.Args[1:]

	switch command {
	case "reset-password":
		cli.ResetPassword()
	default:
		fmt.Printf("Unknown command: %s\n", command)
		os.Exit(1)
	}
}
